{
    "name": "libtrack/subman-backend",
    "description": "Backend app written in Php with Slim Framework for libtrack/subman ",
    "require": {
        "slim/slim": "^4.9",
        "slim/psr7": "^1.5",
        "php-di/slim-bridge": "^3.1",
        "webonyx/graphql-php": "^14.11"
    },
    "autoload": {
        "psr-4": {
            "SubMan\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "overtrue/phplint": "^3.0"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always",
        "test-coverage":"phpunit --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-html",
        "serve": "php -S localhost:3000 -t public public/index.php",
        "lint": "phplint"
    }
}
